<p id="notice"><%= notice %></p>

<h1>Listing Photos</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to 'Image', album_photos_path(@album, order_by: 'image', desc: @desc) %></th>
      <th><%= link_to 'Description', album_photos_path(@album, order_by: 'description', desc: @desc) %></th>
			<th><%= link_to 'Views', album_photos_path(@album, order_by: 'views', desc: @desc) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.image %></td>
        <td><%= photo.description %></td>
        <td><%= link_to 'Show', [@album, photo] %></td>
        <td><%= link_to 'Edit', edit_album_photo_path(@album, photo) %></td>
        <td><%= link_to 'Destroy', [@album, photo], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_album_photo_path(@album) %>
