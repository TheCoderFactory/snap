<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <h1>Listing Photos</h1>
    <%= link_to 'New Photo', new_album_photo_path(@album), class: "btn pull-right" %>
  </div>

  <div class="row">

    <% @photos.each do |photo| %>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <%= link_to image_tag(photo.image), album_photo_path(@album, photo), class: "thumbnail" %>
        <div class="text-center">
          <p> <%= photo.description %></p>
          <%= link_to 'Edit', edit_album_photo_path(@album, photo), class: "btn" %>
          <%= link_to 'Destroy', [@album, photo], class: "btn", method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>
